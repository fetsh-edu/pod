<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.motion.widget.MotionLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layoutDescription="@xml/giphy_fragment_scene">

    <ImageView
        android:id="@+id/giphy_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/giphy_title"
        android:contentDescription="@string/photo_of_the_day_stub"
        app:srcCompat="@drawable/ic_no_photo_vector" />
    <TextView
        android:id="@+id/giphy_title"
        tools:text="Hi"
        android:textAlignment="center"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/giphy_view"
        app:layout_constraintBottom_toTopOf="@id/bottom_navigation_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:labelVisibilityMode="selected"
        app:layout_constraintTop_toBottomOf="@id/giphy_title"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/menu_bottom_navigation" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/in_full_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@+id/giphy_view"
        app:layout_constraintEnd_toEndOf="@id/giphy_view"
        app:srcCompat="@drawable/ic_baseline_open_in_full_24" />
</androidx.constraintlayout.motion.widget.MotionLayout>
