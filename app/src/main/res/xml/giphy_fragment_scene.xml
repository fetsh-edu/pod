<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <ConstraintSet android:id="@+id/start">
        <Constraint
            android:id="@+id/giphy_view"
            android:scaleType="fitCenter"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            motion:layout_constraintBottom_toTopOf="@id/giphy_title"
            motion:layout_constraintTop_toTopOf="parent">
        </Constraint>
        <Constraint
            android:id="@+id/bottom_navigation_view"
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintTop_toBottomOf="@id/giphy_title"
            motion:layout_constraintStart_toStartOf="parent"
            />
        <Constraint
            android:id="@+id/giphy_title"
            android:background="?attr/colorSurface"
            android:textColor="?attr/colorOnSurface"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@id/bottom_navigation_view"
            app:layout_constraintTop_toBottomOf="@id/giphy_view">
            <CustomAttribute
                motion:attributeName="alpha"
                motion:customFloatValue="1.0" />
            <CustomAttribute
                app:attributeName="backgroundColor"
                app:customColorValue="?attr/colorSurface" />
            <CustomAttribute
                app:attributeName="textColor"
                app:customColorValue="?attr/colorOnSurface"
                />
        </Constraint>
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint
            android:id="@+id/giphy_view"
            android:scaleType="centerCrop"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            >
        </Constraint>
        <Constraint
            android:id="@+id/bottom_navigation_view"
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="parent"
            />
        <Constraint
            android:id="@+id/giphy_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            >
            <CustomAttribute
                motion:attributeName="alpha"
                motion:customFloatValue="0.3" />
            <CustomAttribute
                app:attributeName="backgroundColor"
                app:customColorValue="?attr/colorPrimary" />
            <CustomAttribute
                app:attributeName="textColor"
                app:customColorValue="?attr/colorOnPrimary"
                />
        </Constraint>
        <Constraint
            android:id="@+id/in_full_button"
            app:layout_constraintEnd_toEndOf="@id/giphy_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@+id/giphy_title"
            android:visibility="visible" />
    </ConstraintSet>

    <Transition
        motion:constraintSetEnd="@id/end"
        motion:constraintSetStart="@+id/start"
        motion:duration="500">

        <OnClick motion:targetId="@id/in_full_button" />

    </Transition>
</MotionScene>
