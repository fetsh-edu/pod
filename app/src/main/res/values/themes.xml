<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Pod" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="Theme.Pod.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Pod.Default" parent="Theme.Pod.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryVariant">@color/primaryLightColor</item>
        <item name="colorOnPrimary">@color/primaryTextColor</item>
    </style>

    <style name="Theme.Pod.Green" parent="Theme.Pod.NoActionBar">
        <item name="colorPrimary">@color/primaryColorGreen</item>
        <item name="colorPrimaryVariant">@color/primaryLightColorGreen</item>
        <item name="colorOnPrimary">@color/primaryTextColorGreen</item>
    </style>

    <style name="Theme.Pod.Orange" parent="Theme.Pod.NoActionBar">
        <item name="colorPrimary">@color/primaryColorOrange</item>
        <item name="colorPrimaryVariant">@color/primaryLightColorOrange</item>
        <item name="colorOnPrimary">@color/primaryTextColorOrange</item>
    </style>

    <style name="Theme.Pod.Blue" parent="Theme.Pod.NoActionBar">
        <item name="colorPrimary">@color/primaryColorBlue</item>
        <item name="colorPrimaryVariant">@color/primaryLightColorBlue</item>
        <item name="colorOnPrimary">@color/primaryTextColorBlue</item>
    </style>

    <style name="Theme.Pod.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Pod.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>